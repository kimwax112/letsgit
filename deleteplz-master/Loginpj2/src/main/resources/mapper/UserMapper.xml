<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.Loginpj.mapper.UserMapper">

    <resultMap id="UserResultMap" type="com.example.Loginpj.model.User">
        <result property="id" column="id"/>
        <result property="passwd" column="passwd"/>
        <result property="email" column="email"/>
        <result property="name" column="name"/>
        <result property="tel" column="tel"/>
        <result property="birthdate" column="birthdate"/>
        <result property="gender" column="gender"/>
    </resultMap>

    <select id="findById" parameterType="string" resultMap="UserResultMap">
        SELECT id, passwd, email, name, tel, birthdate, gender
        FROM user_info
        WHERE id = #{id, jdbcType=VARCHAR}
    </select>

    <insert id="insertUser" parameterType="com.example.Loginpj.model.User">
        INSERT INTO user_info (id, passwd, email, name, tel, birthdate, gender)
        VALUES (#{id}, #{passwd}, #{email}, #{name}, #{tel}, #{birthdate}, #{gender})
    </insert>

</mapper>
